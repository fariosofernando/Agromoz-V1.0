# no drop down se o widget que o chama (opon(widget)) for maior ele estará por trás e nao dará par ver
<Caixa>:
    drop_menu: drop_menu.__self__ # nao sei para que serve ainda 
    Button:
        id: btn
        text: 'Button Open DropDown'
        text_size: self.size
        valign: 'middle'
        halign: 'center'
        size_hint: None, None
        width: 100
        height: 100
        on_parent: drop_menu.dismiss() # no botao que abre o  menu deve estar isto, se não abre logo que inicar o app
        on_press: drop_menu.open(self)
        on_release: root.anime(drop_menu)

    DropDown:
        id: drop_menu 
        pos_hint: {'center_x': .5, 'center_y': 1.9} # posicao do widget nos exos X e Y
        auto_width: False # para nao apareecer sosinho
        width: 170# Tamanho do drop
        
        BoxLayout:
            spacing: 10
            padding: 10,10,10,10
            orientation: 'vertical'
            size_hint: None, None # Defina sempre se nao irá aparecer o drop
            width: drop_menu.width
            height: 50
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: 'Hello World'
                color: 0,0,0,1
                borld: True